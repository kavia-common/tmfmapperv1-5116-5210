{
  "openapi": "3.0.3",
  "info": {
    "title": "Native Django Inventory API",
    "version": "0.0.1"
  },
  "paths": {
    "/items": {
      "get": {
        "summary": "List items",
        "responses": {
          "200": {
            "description": "List of items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Item" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "description": "Example inventory item",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "quantity": { "type": "integer" }
        },
        "required": ["id", "name"]
      }
    }
  }
}
